.panel-item {
  display: flex;
  background-color: #fff;
  padding: 30rpx;
  width: 100%;
  box-sizing:border-box;
}
.panel-item .left {
  width: 128rpx;
  height: 180rpx;
  position: relative;
  margin-right: 20rpx;
}
.panel-item .left image {
  width: 100%;
  height: 180rpx;
}
.panel-item .right {
  flex: 1;
  text-align: left;
  padding: 10rpx 28rpx 10rpx 0;
  height: 180rpx;
  max-height: 180rpx;
  position: relative;
  overflow: hidden;
}
.panel-item .right .title {
  max-height: 48rpx;
  margin-bottom: 8rpx;
  line-height: 48rpx;
  overflow: hidden;
  display: flex;
}
.panel-item .right .title .tit{
  font-size: 34rpx;
  color: #333;
  font-weight: 700;
  padding-right: 10rpx;
}
.panel-item .right .title .rating {
  color: #f03d37;
  font-size: 22rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.panel-item .right .collect_count {
  font-size: 26rpx;
  color: #666;
}

.panel-item .right .collect_count text {
  color: #faaf00;
  font-size: 30rpx;
  font-weight: 600;
  margin-right: 4rpx;
}
.panel-item .right .casts{
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
}
.panel-item .right .mainland_pubdate {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
  line-height: 30rpx;
}